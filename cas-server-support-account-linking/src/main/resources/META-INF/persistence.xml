<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="Grid2Persistence"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.galois.grid2.store.entities.LocalName</class>
		<class>com.galois.grid2.store.entities.RemoteNameEntity</class>
		<class>com.galois.grid2.store.entities.Namespace</class>
	</persistence-unit>
</persistence>